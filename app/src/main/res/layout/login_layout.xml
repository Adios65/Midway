<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"

	android:id="@+id/rootContainer"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/blue1"

		>

		<androidx.viewpager.widget.ViewPager
			android:id="@+id/pager"
			android:layout_width="293dp"
			android:layout_height="224dp"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="58dp"
			android:layout_marginTop="35dp"
			android:layout_marginEnd="60dp"
			android:background="@color/white"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.497"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.205"
			/>

		<TextView
			android:layout_width="175dp"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="56dp"
			android:layout_marginTop="297dp"
			android:layout_marginEnd="180dp"
			android:paddingLeft="5dp"
			android:text="@string/email"
			android:textColor="@color/white"
			android:textSize="18sp"
			/>

		<EditText
			android:id="@+id/emailInput_signIn"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="46dp"
			android:layout_marginTop="333dp"
			android:layout_marginEnd="46dp"
			android:background="@color/white"
			/>

		<EditText
			android:id="@+id/passwordInput_signIn"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="46dp"
			android:layout_marginTop="415dp"
			android:layout_marginEnd="46dp"
			android:background="@color/white"
			/>

		<Button
			android:id="@+id/button_signIn"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="116dp"
			android:layout_marginTop="469dp"
			android:layout_marginEnd="116dp"
			android:backgroundTint="@color/white"
			android:text="Sign In"
			android:textColor="@color/blue1"
			/>

		<TextView
			android:layout_width="200dp"
			android:layout_height="31dp"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="105dp"
			android:layout_marginTop="523dp"
			android:layout_marginEnd="106dp"
			android:gravity="center"
			android:text="Or"
			android:textColor="@color/white"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="58dp"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="0dp"
			android:layout_marginTop="553dp"
			android:layout_marginEnd="0dp"
			android:gravity="center"
			>

			<Space
				android:layout_width="20dp"
				android:layout_height="wrap_content"
				/>

			<ImageView
				android:id="@+id/googleIcon"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:scaleType="fitCenter"
				android:src="@drawable/ic_google_icon"
				/>

			<Space
				android:layout_width="20dp"
				android:layout_height="wrap_content"
				/>

			<ImageView
				android:id="@+id/facebookIcon"
				android:layout_width="61dp"
				android:layout_height="60dp"
				android:paddingTop="5dp"
				android:paddingRight="10dp"
				android:src="@drawable/ic_facebook_icon_background"
				/>

		</LinearLayout>

		<TextView
			android:layout_width="245dp"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="83dp"
			android:layout_marginTop="620dp"
			android:layout_marginEnd="83dp"
			android:gravity="center"
			android:text="Don't have an account? Sign Up"
			android:textColor="@color/white"
			/>

		<TextView
			android:layout_width="167dp"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="56dp"
			android:layout_marginTop="383dp"
			android:layout_marginEnd="188dp"
			android:paddingStart="5dp"
			android:text="@string/password"
			android:textColor="@color/white"
			android:textSize="18sp"
			/>

	</RelativeLayout>


</LinearLayout>










